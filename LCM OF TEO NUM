#include <stdio.h>

int main()
{
    int a,b;
    printf("ENTER THE TWO NUM");
    scanf("%d%d",&a,&b);
    int big=a>b ? a:b;
    int step = big;
    while(1){
        if(big%a==0 && big%b==0)
        break;
        else
        big=step+big;
        

    }
    printf("the lcm is %d",big);
}
